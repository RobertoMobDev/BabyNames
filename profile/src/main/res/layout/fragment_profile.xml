<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:fitsSystemWindows="true"
    tools:context=".presentation.fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profile_layout_section"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_fragment_section_profile_height"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_user_picture"
                android:layout_width="@dimen/profile_fragment_user_pic_size"
                android:layout_height="@dimen/profile_fragment_user_pic_size"
                android:layout_marginEnd="@dimen/profile_fragment_user_pic_end_margins"
                android:layout_marginStart="@dimen/profile_fragment_user_pic_start_margins"
                android:background="@drawable/shape_user_picture"
                android:contentDescription="@null" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/profile_fragment_user_name_bottom_margins"
                    android:fontFamily="@font/proxima_bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/profile_fragment_user_name_size" />

                <TextView
                    android:id="@+id/text_profile_log_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/proxima_bold"
                    android:text="@string/profile_logout_text"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/profile_fragment_logout_size" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/partner_layout_section"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_fragment_section_profile_height"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_add_partner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/profile_fragment_add_couple_side_margins"
                android:fontFamily="@font/proxima_bold"
                android:text="@string/profile_partner_text"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/profile_fragment_add_couple_size" />

            <RelativeLayout
                android:id="@+id/couple_profile_layout_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_couple_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/profile_fragment_couple_name_bottom_margins"
                        android:layout_marginEnd="@dimen/profile_fragment_couple_name_end_margins"
                        android:layout_marginStart="@dimen/profile_fragment_couple_name_start_margins"
                        android:fontFamily="@font/proxima_bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/profile_fragment_couple_name_size"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/profile_fragment_manage_text_end_margins"
                        android:layout_marginStart="@dimen/profile_fragment_manage_text_start_margins"
                        android:fontFamily="@font/proxima_bold"
                        android:text="@string/profile_manage_partner_text"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/profile_fragment_manage_text_size" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/image_couple_picture"
                    android:layout_width="@dimen/profile_fragment_user_pic_size"
                    android:layout_height="@dimen/profile_fragment_user_pic_size"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/profile_fragment_user_pic_end_margins"
                    android:layout_marginStart="@dimen/profile_fragment_user_pic_start_margins"
                    android:background="@drawable/shape_user_picture"
                    android:contentDescription="@null" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gender_layout_section"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_fragment_general_section_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/profile_fragment_icon_size"
                android:layout_height="@dimen/profile_fragment_icon_size"
                android:layout_marginEnd="@dimen/profile_fragment_icon_end_margins"
                android:layout_marginStart="@dimen/profile_fragment_icon_start_margins"
                android:contentDescription="@null"
                android:src="@drawable/icon_change_gender"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_bold"
                android:text="@string/profile_gender_text"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/profile_fragment_general_section_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_layout_section"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_fragment_general_section_height"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/profile_fragment_icon_size"
                android:layout_height="@dimen/profile_fragment_icon_size"
                android:layout_marginEnd="@dimen/profile_fragment_icon_end_margins"
                android:layout_marginStart="@dimen/profile_fragment_icon_start_margins"
                android:contentDescription="@null"
                android:src="@drawable/icon_about_us"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_bold"
                android:text="@string/profile_about_text"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/profile_fragment_general_section_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_layout_section"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/profile_fragment_icon_size"
                android:layout_height="@dimen/profile_fragment_icon_size"
                android:layout_marginEnd="@dimen/profile_fragment_icon_end_margins"
                android:layout_marginStart="@dimen/profile_fragment_icon_start_margins"
                android:contentDescription="@null"
                android:src="@drawable/icon_shape_app"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_bold"
                android:text="@string/profile_share_text"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/profile_fragment_general_section_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rate_layout_section"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/profile_fragment_icon_size"
                android:layout_height="@dimen/profile_fragment_icon_size"
                android:layout_marginEnd="@dimen/profile_fragment_icon_end_margins"
                android:layout_marginStart="@dimen/profile_fragment_icon_start_margins"
                android:contentDescription="@null"
                android:src="@drawable/icon_rate_us"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_bold"
                android:text="@string/profile_rate_text"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/profile_fragment_general_section_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/feedback_layout_section"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="@dimen/profile_fragment_icon_size"
                android:layout_height="@dimen/profile_fragment_icon_size"
                android:layout_marginEnd="@dimen/profile_fragment_icon_end_margins"
                android:contentDescription="@null"
                android:src="@drawable/icon_feedback"
                android:tint="@color/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/proxima_bold"
                android:text="@string/profile_feedback_text"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/profile_fragment_general_section_text_size" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>