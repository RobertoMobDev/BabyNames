<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".presentation.fragments.FavoritesFragment">

    <com.babynames.babynames.presentation.views.RecyclerEmpty
        android:id="@+id/recycler_favorites_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linear_favorites_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_favorites_empty"
            android:layout_width="@dimen/favorites_fragment_animation_size"
            android:layout_height="@dimen/favorites_fragment_animation_size"
            android:layout_marginBottom="@dimen/favorites_fragment_animation_bottom_margins"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/text_empty_list_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/favorites_fragment_message_header_bottom_margins"
            android:fontFamily="@font/proxima_bold"
            android:gravity="center"
            android:text="@string/favorite_empty_list_header"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/favorites_fragment_message_header_size"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/text_empty_list_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/favorites_fragment_message_side_margins"
            android:layout_marginLeft="@dimen/favorites_fragment_message_side_margins"
            android:layout_marginRight="@dimen/favorites_fragment_message_side_margins"
            android:layout_marginStart="@dimen/favorites_fragment_message_side_margins"
            android:fontFamily="@font/proxima_regular"
            android:gravity="center"
            android:text="@string/favorite_empty_list_message"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/favorites_fragment_message_size"
            android:textStyle="normal" />

    </LinearLayout>

</FrameLayout>